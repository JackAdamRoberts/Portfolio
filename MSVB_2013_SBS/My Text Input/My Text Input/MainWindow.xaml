<Window x:Class="MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:My_Text_Input"
        mc:Ignorable="d"
        Title="MainWindow" Height="350" Width="525">
    <Grid Background="#FF0F0F0F">
        <TextBox x:Name="InputString" ScrollViewer.VerticalScrollBarVisibility="Visible" HorizontalAlignment="Left" Height="68" Margin="60,21,0,0" TextWrapping="Wrap" Text="TextBox" VerticalAlignment="Top" Width="239" RenderTransformOrigin="0.501,0.517" SpellCheck.IsEnabled="True"/>
        <TextBox x:Name="Output" HorizontalAlignment="Left" Height="43" Margin="60,109,0,0" TextWrapping="Wrap" Text="TextBox" VerticalAlignment="Top" Width="239"/>
        <Button x:Name="TestButton" Content="Click to Test" HorizontalAlignment="Left" Margin="60,171,0,0" VerticalAlignment="Top" Width="75" Background="#FF1A1A1A" BorderBrush="White" Foreground="White"/>

    </Grid>
</Window>
